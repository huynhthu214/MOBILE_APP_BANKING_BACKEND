{
  "info": {
    "name": "Banking - Transaction API (Clean Version)",
    "_postman_id": "b1234567-89ab-cdef-0123-456789abcdef",
    "description": "Full test for deposit / withdraw / transfer with 2-step OTP flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Transactions",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/api/v1/transactions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "transactions"]
        }
      }
    },
    {
      "name": "Get Transaction by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/api/v1/transactions/{{transaction_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "transactions", "{{transaction_id}}"]
        }
      }
    },
    {
      "name": "DEPOSIT - Step 1 (Create)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account_id\": \"A000001\",\n  \"amount\": 500000\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/v1/transactions/deposit/create",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "transactions", "deposit", "create"]
        }
      }
    },
    {
      "name": "DEPOSIT - Step 2 (Confirm OTP)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"transaction_id\": \"{{transaction_id}}\",\n  \"otp\": \"{{otp}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/v1/transactions/deposit/confirm",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "transactions", "deposit", "confirm"]
        }
      }
    },
